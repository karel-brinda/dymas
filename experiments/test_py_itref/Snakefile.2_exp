import smbl
import sys
import rnftools
import conf

sys.path.insert(0, "../../dymas")
import dymas

##############################
##############################

rnftools.mishmash.sample(dymas.dir_reads,reads_in_tuple=1)

rnftools.mishmash.DwgSim(
	fasta=conf.reference,
	number_of_read_tuples=100000,
	read_length_1=100,
	read_length_2=0,
	mutation_rate=0.07,
)

fq="{}.fq".format(dymas.dir_reads)

##############################
##############################


bwa = dymas.Mapping_BwaMem()

reads = dymas.Reads_ItRef(
		reads=100000,
		fastq_1_fn=fq,
		iterations=10,
	)

consensus = dymas.Consensus_Py(
				call_snps=True,
				call_ins=True,
				call_dels=True,
			)

pileup=dymas.Pileup_SamTools()

experiment = dymas.Experiment(
		experiment_name=dymas.dir_alignments,
		starting_reference_fasta_fn=conf.reference,
		mapping_object=bwa,
		reads_object=reads,
		pileup_object=pileup,
		consensus_object=consensus,
	)

##############################
##############################

include: smbl.include()

rule:
	input:
		[
			experiment.input(),
		]

